# Jira REST API Configuration
JIRA_EMAIL=your-jira-email@example.com
JIRA_API_TOKEN=your-jira-api-token
JIRA_DOMAIN=your-domain.atlassian.net

# Jira Bot Account (use one or the other)
JIRA_BOT_ACCOUNT_ID=jira-bot-account-id
JIRA_BOT_ACCOUNT_NAME=jira-bot-display-name

# Backend API URLs
BASE_API_URL=https://your-api.example.com
BASE_CLJ_API_URL=https://your-clj-api.example.com

# Anthropic AI API Key (optional - uses claude-code CLI if not set)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Backend Authentication (per-tenant, fetched dynamically)
# These are NOT used directly - tenant credentials are fetched from 1Password
# based on the tenant name extracted from each Jira ticket
# Format: customersolutions+<tenantName>@jesi.io
# Example: customersolutions+acme@jesi.io
# AUTH_EMAIL and AUTH_PASSWORD are set dynamically per ticket

# Optional: Logging level (defaults to :info)
LOG_LEVEL=info