# Jira Configuration
JIRA_URL=https://your-org.atlassian.net
JIRA_USERNAME=your-email@example.com
JIRA_API_TOKEN=your-jira-api-token

# JQL Query for finding tickets
# Default: project = JESI AND labels = user-upload AND status in (Open, Review)
JIRA_JQL=project = JESI AND labels = user-upload AND status in (Open, Review)

# Backend API URLs
BASE_API_URL=https://api.jesi.io/application
BASE_CLJ_API_URL=https://apiv2.jesi.io

# 1Password Configuration (for fetching tenant credentials)
# Service account token for accessing the vault
OP_SERVICE_ACCOUNT_TOKEN=your-1password-service-account-token

# Optional: Override the vault name (defaults to "JESI Customer Solutions")
# OP_VAULT_NAME=JESI Customer Solutions

# Logging Level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Optional: Dry run mode (true/false)
# DRY_RUN=false

# Optional: Watch mode interval in seconds (defaults to 300)
# WATCH_INTERVAL=300